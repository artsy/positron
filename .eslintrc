{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "globals": {
    "__dirname": true
  },
  "env": {
    "browser": true,
    "mocha": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "camelcase": 0,
    "comma-dangle": ["error", "never"],
    "jsx-quotes": "prefer-double",
    "no-mixed-operators": 0,
    "no-new": 0,
    "react/jsx-indent": 0,
    "react/jsx-indent-props": 0,
    "react/jsx-no-bind": 0,
    "space-before-function-paren": [
      "error",
      "never"
    ]
  }
}
