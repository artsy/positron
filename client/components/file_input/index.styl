.file-input
  position relative
  input
    width 100%
    height 100%
    opacity 0
    display block
    position absolute
    left 0
    top 0
    cursor pointer
  &__upload-container
    border 2px dashed gray-darker-color
    transition border-color 0.3s, color 0.3s
    avant-garde()
    background black
    color white
    text-align center
    padding 20px
    display flex
    flex-direction column
    justify-content center
    &:hover, &.is-dragover
      border-color white
      span
        color gray-darker-color
    &.is-dragover
      .file-input__upload-container-drop
        color white
    &:hover
      border-color gray-darker-color
      .file-input__upload-container-click
        color white
    span
      transition color 0.3s
    h1
      font-size default-avant-garde-font-size - 1
      margin-bottom 10px
    h2
      font-size small-avant-garde-font-size
      color gray-darker-color

.file-input.simple
  .file-input__upload-container
    border none
    background gray-color

.edit-controls__inputs .file-input__upload-container h2
  margin 0
