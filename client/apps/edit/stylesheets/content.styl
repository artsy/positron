@import '../../../components/stylus_lib'
@import './lib'

#edit-content
  margin-top header-size

#edit-title
  position relative
  .edit-required
    position absolute
    top 0
    width 100%
    text-align center
    z-index -1
    &::after
      left 100px
      top 66px
      position relative
  input
    width 100%
    text-align center
    font-size 40px
    margin 60px 0 30px 0

#edit-author-section
  text-align center
  width 100%
  avant-garde()
  font-size small-avant-garde-font-size + 1
  marigin-bottom whitespace-block-size
  p
    display inline-block
    &:after
      content '\2022'
      margin 0 10px
    &:last-child:after
      display none

.edit-body-container
  width body-width
  margin auto

#edit-lead-paragraph
  margin 20px auto whitespace-block-size auto
  input
    font-size 20px
