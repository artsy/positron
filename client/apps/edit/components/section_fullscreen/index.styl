@import '../stylus_lib'

.edit-section-fullscreen .edit-section-controls
  fill-container()
  position absolute
  top 0
  left 0
  z-index 4
  display none

.esf-placeholder
  width 100%
  height 800px
  background-color gray-lighter-color
  position relative

.edit-section-container-block
  position relative
  height 800px

.edit-section-container[data-type=fullscreen]
  height 800px
  width calc(100vw - 110px)
  margin-top -45px
  padding 0px
  left 110px
  position absolute
  overflow hidden
  &::after
    border 0
  .edit-section-controls
    display block
  .edit-author-section
    color white
    border-color white
    margin-top 0px

.edit-section-container[data-type=fullscreen][data-editing=false]
  .esf-change-background
    display none

.edit-section-container[data-type=fullscreen][data-editing=true]
  .esf-change-background
    display inline-block

.esf-right-controls-container
  float right
  margin-top 20px
  .edit-section-remove
    right 20px
    top 20px
    display inline-block

.esf-change-background
  avant-garde()
  display inline-block
  margin-right 75px
  position relative
  cursor pointer
  color white
  input
    width 100%
    height 100%
    display block
    position absolute
    opacity 0
    top 0
    left 0
    cursor pointer

.esf-fullscreen
  width 100%
  transition opacity 0.5s
  opacity 0.5
  position absolute

.esf-fullscreen-container
  z-index 3
  background-color black
  width 100%
  height 800px

.esf-text-container
  z-index 4
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

.esf-intro[contentEditable=true]:empty:not(:focus):before
  content attr('Introduction *')

.esf-text-container.is-super-article
  width 900px
  .esf-intro
    margin-top 0px
  .esf-title
    text-align left

.esf-title, .esf-intro
  cursor text
  width 100%
  display block
  font-style italic
  position relative
  color white

textarea.esf-title
  garamond 'xxl-headline'
  overflow hidden
  word-wrap break-word
  resize horizontal
  max-height 152px
  text-align center
  &::-webkit-input-placeholder
    color white

.esf-intro
  garamond()
  font-size 22px
  margin-top 40px
  &.is-empty::before
    content 'Introduction *'
    position absolute
