@import '../stylus_lib'

.edit-section-image
  position relative

.est-nav
  fill-container()
  height 40px
  top -(@height - 1px)

[data-useragent*=Firefox] .est-nav
  height 41px

.edit-section-image .edit-section-controls
  fill-container()
  avant-garde()
  background black
  color white
  height 188px
  top -(@height + controls-padding)
  left -(controls-padding)
  padding controls-padding
  text-align center
  display none
  z-index 2
  width overflow-width
  h1
    font-size default-avant-garde-font-size - 1
  h2
    font-size small-avant-garde-font-size
    color gray-darker-color
    margin-top 10px

.dashed-file-upload-container
  padding controls-padding

.esi-placeholder
  text-align center
  color gray-darker-color
  height 200px
  line-height @height

.edit-section-controls .dashed-file-upload-container
  border-color gray-darker-color
  transition border-color 0.3s, color 0.3s
  span
    transition color 0.3s
  &:hover, &.is-dragover
    border-color white
    span
      color gray-darker-color
  &.is-dragover
    .dashed-file-upload-container-drop
      color white
  &:hover
    border 2px solid gray-darker-color
    .dashed-file-upload-container-click
      color white

.edit-section-container[data-editing=true]
  .edit-section-controls
    display block

.esi-image
  width 100%
  transition opacity 0.5s

#edit-thumbnail-upload
  position relative
  .upload-progress-container
    display none

.esi-caption
  border 1px solid gray-darker-color !important
  width 100%
  background transparent
  text-transform none
  letter-spacing 0
  cursor text
  color white
  a
    color white
  &.is-empty::before
    content 'Add a caption'
    color gray-dark-color
    position absolute
    text-align center
    left 0
    width 100%

[data-useragent*=Firefox] .esi-caption
  position absolute
  width calc(100% - 40px)

.esi-nav.edit-scribe-nav
  margin 10px 0
  button
    padding 6px 20px
    &::after
      top 3px !important
    svg
      top 7px !important

.esi-inline-caption
  color gray-darker-color
  margin-top 10px
  font-style italic
  a
    color gray-darker-color
