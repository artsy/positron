mixin featuredList(id, resource)
  ul.edit-admin-feature-list( id=id )
    li
      .loading-spinner-small
    li.eaf-input-li
      label
        input.bordered-input(
          class=['eaf', resource, 'input'].join('-')
          placeholder="Add an #{resource} by url or slug..."
        )

section#edit-admin
  section#edit-admin-tier
    .edit-admin-left
      h1 Tier
      h2 Tier 1 articles get highlighted in the magazine section.
    .edit-admin-right
      label.flat-radio-button
        input( type='radio' name='tier' checked=article.get('tier') == 1
          value=1 )
        | Tier 1
      label.flat-radio-button
        input( type='radio' name='tier' checked=article.get('tier') != 1
          value=2 )
        | Tier 2
  section#edit-admin-magazine
    .edit-admin-left
      h1 Magazine
      h2 Add this article to the main Magazine section of Artsy.
    .edit-admin-right
      label.flat-checkbox
        input( type='checkbox' name= 'featured'
          checked=article.get('featured') == 1 value=1 )
  section#edit-admin-fair
    .edit-admin-left
      h1 Fair
      h2 Add this article to a fair&rsquo;s magazine and year round page.
    .edit-admin-right
  section#edit-admin-partner
    .edit-admin-left
      h1 Partner
      h2 Add this article to a partner&rsquo;s profile page.
    .edit-admin-right
  section#edit-admin-auction
    .edit-admin-left
      h1 Auction
      h2 Add this article to an auction&rsquo;s page.
    .edit-admin-right
  section#edit-admin-feature
    .edit-admin-left
      h1 Artists & Artworks
      h2 Select artist and artwork pages for this article to appear highlighted on.
    .edit-admin-right
      h3 Primary Artists
      +featuredList('eaf-primary-artists', 'artist')
      h3 SecondaryÂ Artists
      +featuredList('eaf-artists', 'artist')
      h3 Artworks
      +featuredList('eaf-artworks', 'artwork')
  section#edit-admin-slug
    .edit-admin-left
      h1 Slug
      h2 Change the url of this article to optimize SEO impact.
    .edit-admin-right
      input.bordered-input.edit-admin-slug-input( placeholder='Enter slug for url...' value=article.get('slug') )
      a.edit-admin-slug-generate(href='/') Generate from title & author name
  section#edit-admin-publish-date
    .edit-admin-left
      h1 Publish Date
      h2 Change the date this article was published to reorder it in a Magazine view.
    .edit-admin-right
      input.bordered-input.edit-admin-input-date
  section#edit-admin-change-author
    .edit-admin-left
      h1 Change Author
      h2 Changing the author of this article will move it to their Artsy Writer.
    .edit-admin-right
      input.bordered-input( placeholder='Search by user name...' )
