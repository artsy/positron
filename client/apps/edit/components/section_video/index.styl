@import '../stylus_lib'

.edit-section-video .edit-section-controls
  background black
  color white
  fill-container()
  height 114px
  top -(@height)
  padding controls-padding
  z-index 3
  display none
  form
    padding controls-padding 0
  input
    width 402px
  button
    border 0
    position relative
    top 1px

[data-useragent*=Firefox] .edit-section-video .edit-section-controls input
  width 397px

.esv-placeholder
  height 150px
  line-height @height
  text-align center
  color gray-dark-color

.edit-section-container[data-editing=true]
  .edit-section-controls
    display block
  .edit-section-video iframe
    position relative
    z-index 2