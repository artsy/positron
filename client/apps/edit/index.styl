.edit-scribe-nav
  background black
  z-index 3
  avant-garde()
  display none
  text-align center
  button
    color gray-dark-color
    border 0
    border-right 1px solid gray-darkest-color
    padding 12px 20px
    background transparent
    font-size 12px
    cursor pointer
    display inline-block
    vertical-align top
    outline none
    position relative
    transition color 0.15s
    &:last-child
      border-right 0
    &.active
      color white
      svg
        fill-color white 0.15s
    svg
      fill-color gray-dark-color 0.15s
      position absolute
    &[data-command-name=linkPrompt] svg
      width 13px
      height 14px
      top 12px
      left 16px
    &[data-command-name=removeFormat] svg
      height 20px
      width 19px
      left 15px
      top 12px
    &[data-command-name=italic]::after
      content 'I'
      garamond()
      font-style italic
      position absolute
      font-size 18px
      font-weight bold
      top 8px
      left 17px
    &[data-command-name=bold]::after
      content 'B'
      avant-garde()
      position absolute
      top 8px
      left 17px
      font-size 16px
    &[data-command-name=h2]
      padding 12px 24px
      height 100%
      &::after
        content 'H2'
        garamond()
        font-size 18px
        font-weight bold
        position absolute
        top 8px
        left 13px
    &[disabled=disabled]
      color gray-darkest-color
      fill-color gray-darkest-color 0.15s
