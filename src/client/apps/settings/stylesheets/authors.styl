.authors-header
  width 100%
  display flex
  justify-content space-between
  align-items center

.authors-list
  margin-top 60px
  &__item
    font-size 30px
    display flex
    align-items center
    cursor default
    &:first-child
      border-top 1px solid gray-lighter-color
    &:last-child
      border-bottom 1px solid gray-lighter-color
  &__item-edit
    background-color gray-lightest-color
    border-color gray-lightest-color
    margin-left auto

// Modal
.modal[data-open=false]
  .modal-container, .modal-container__overlay
    display none
.modal[data-open=true]
  display flex
  justify-content center
  align-items center
  width calc(100vw \- 110px)
  height 100vh
  position absolute
  .modal-container, .modal-container__overlay
    display block
.modal-container
  padding 60px 100px
  position absolute
  display flex
  background-color white
  h1
    garamond('headline')
    margin-bottom 60px
.modal-container__overlay
  position fixed
  width calc(100vw \- 110px)
  height 100vh
  background-color black
  opacity 0.5
.author-edit
  width 700px
  margin-bottom 30px
  &__button
    height 50px
  &__chars
    avant-garde('s-headline')
  &__chars, &__image
    color gray-dark-color
  &__bio-footer
    display flex
    justify-content space-between
    margin-top 10px
  &__bio
    resize none
    height 80%
  &__change-image
    text-decoration underline
    margin-left 10px
    position relative
  &__image
    display flex
    align-items center
    img
      border-radius 50%
      width 40px
      height 40px
  &__image-missing
    width 40px
    height 40px
  &__close
    position absolute
    top 30px
    right 30px
    svg
      fill gray-dark-color
      width 15px
      height 15px
  &__twitter
  &__instagram
    padding-left 30px
  &__twitter-at
  &__instagram-at
    position absolute
    margin 5px 0 0 10px
    line-height 38px
    color gray-dark-color
.author-image
  border-radius 50%
  width 40px
  margin-right 20px